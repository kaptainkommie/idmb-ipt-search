{
	"manifest_version": 2,
	"name": "IMDb IPT Search",
	"version": "1.0",
	"description": "Displays a IPTorrents search button on IMDb title (TV and Movie) pages.",
	"author": "kaptainkommie",

  "permissions": [
    "storage"
    ],
 	
	"content_scripts": [
		{
			"matches": ["*://www.imdb.com/title/*", "*://imdb.com/title/*", 
			"*://www.next-episode.net/*", "*://next-episode.net/*",
			"*://www.tvmaze.com/shows/*", "*://tvmaze.com/shows/*"],
			"js": ["contentscript.js"]
		}
	],

	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}

}